# Environment variables for the project
# Copy this file to .env and fill in your values

# Database Credentials (used by docker-compose for local PostgreSQL - optional)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=atenteai

# Database URL for SQLAlchemy (use Supabase or local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@your_host:5432/your_database

# Google/Gemini API Key (Optional - for Google LLM provider)
GOOGLE_API_KEY=your_gemini_api_key_here

# JWT Secret (REQUIRED - Change in production!)
SECRET_KEY=your-super-secret-key-change-in-production

# Optional: Other LLM providers API keys (leave empty if not using)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# LLM Provider Configuration
# Options: "groq" (remote, fast), "ollama" (local, private), "openai", "anthropic", "google"
DEFAULT_LLM_PROVIDER=groq
DEFAULT_MODEL=llama-3.3-70b-versatile
TEMPERATURE=0.7

# Ollama Configuration (only if DEFAULT_LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Evolution API (WhatsApp integration)
EVOLUTION_API_KEY=THISISMYSECURETOKEN
